<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Set Email and New Password</title>
    </head>
    <body>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Set Email and New Password</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Baze\CredentialWorkflowControl\Block\Rewrite\Account\Resetpassword" name="resetPassword" template="Baze_CredentialWorkflowControl::form/resetforgottenpassword.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
